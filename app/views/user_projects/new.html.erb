<h1>New User Project</h1>

<%= form_with(model: @user_project, local: true) do |form| %>
  <% if @user_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_project.errors.count, "error") %> prohibited this user project from being saved:</h2>
      <ul>
        <% @user_project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :username %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.collection_select :project_id, Project.all, :id, :project_name %>
  </div>

  <div class="field">
    <%= form.label :assigned_on %>
    <%= form.datetime_select :assigned_on %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', user_projects_path %>
