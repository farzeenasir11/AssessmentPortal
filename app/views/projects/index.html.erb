<h1>Projects</h1>
<%= link_to 'Home', root_path %>
<%= link_to 'New Project', new_project_path %>
<%= search_form_for @q, url: projects_path, method: :get do |f| %>
  <div class="field">
    <%= f.label :project_name_cont, 'Search by Project Name' %>
    <%= f.search_field :project_name_cont %>
  </div>

  <div class="actions">
    <%= f.submit 'Search' %>
  </div>
<% end %>
<%= link_to 'Back', projects_path %>
<table>
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project_path(project)  %> |</td> 
        <td><%= link_to 'Edit', edit_project_path(project) %> |</td>
        <td><%= button_to 'Destroy', project_path(project), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

