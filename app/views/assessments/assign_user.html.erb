<h1>Assign User to <%= @assessment.title %></h1>

<%= form_with url: assign_user_project_assessment_path(@project, @assessment), method: :post do %>
  <div>
    <label for="user_id">Select User:</label>
    <%= select_tag :user_ids, options_from_collection_for_select(@users_to_assign, :id, :email), multiple: true, size: 10 %>
  </div>
  <div>
    <%= submit_tag 'Assign User' %>
  </div>
<% end %>

<%= link_to 'Back', project_assessment_path(@project, @assessment) %>
