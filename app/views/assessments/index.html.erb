<h1>Assessments</h1>
<%= link_to 'Home', root_path %> 
<%= link_to 'New Assessment', new_project_assessment_path(@project) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.title %></td>
        <td><%= assessment.description %></td>
        <td><%= link_to 'Show', project_assessment_path(assessment.project, assessment) %> </td>
        <td><%= link_to 'Edit', edit_project_assessment_path(assessment.project,assessment) %> </td>
        <td><%= link_to 'Assign User', assign_user_project_assessment_path(assessment.project, assessment) %> </td> 
        <td><%= link_to 'Add Question', new_project_assessment_question_path(assessment.project, assessment) %> </td> 
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', project_path(@project)%> 



